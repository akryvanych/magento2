<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="My\CustomDescription\Api\Data\CustomDescriptionInterface"
                type="My\CustomDescription\Model\CustomDescription"/>
    <preference for="My\CustomDescription\Api\CustomDescriptionsProviderInterface"
                type="My\CustomDescription\Model\CustomDescriptions\Provider"/>
    <type name="Magento\Customer\Api\CustomerRepositoryInterface">
        <plugin name="joinCustomDescriptionToCustomer"
                type="My\CustomDescription\Model\Plugin\Customer\Repository"/>
    </type>
    <type name="Magento\Framework\EntityManager\MetadataPool">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="My\CustomDescription\Api\Data\CustomDescriptionInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">allow_add_description</item>
                    <item name="identifierField" xsi:type="string">description_id</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
